# Automatically normalize line endings for all text-based files
* text eol=lf

Vagrantfile              linguist-language=ruby
ssl.cnf                  linguist-language=INI
bf_agent                 linguist-language=INI
.blackfire.ini           linguist-language=INI
.bash_aliases            linguist-language=Shell
*.j2                     linguist-language=Jinja2
src/templates/nginx/*    linguist-language=Nginx
*.yml                    linguist-language=YAML
